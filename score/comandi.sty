\newcommand{\battente}[7]{
    % Parametri: nodo di riferimento, offset x, offset y, larghezza, altezza, riempimento, angolo di rotazione
     \coordinate (cen) at ($(#1) + (#2, #3)$);
     \coordinate (center) at ($(cen) + (#4/2, #5/2)$);
     \coordinate (start) at ($(cen) - (#4/2, #5/2)$);
    \ifthenelse{\equal{#6}{bloccato}}{%
        % Rettangolo riempito

        \fill[black, rotate around={#7:(center)}] (start) rectangle ++(#4, #5);
    }{%
        % Rettangolo vuoto
        \fill[white, rotate around={#7:(center)}, line width = .6pt] (start) rectangle ++(#4, #5);
        \draw[rotate around={#7:(center)}, line width = .6pt] (start) rectangle ++(#4, #5);
    }
}

\newcommand{\battenteAcc}[7]{
    % Parametri: nodo di riferimento, offset x, offset y, larghezza, altezza, riempimento, angolo di rotazione
     \coordinate (cen) at ($(#1) + (#2, #3)$);
     \coordinate (acciaccDestra) at ($(cen) - (0,#5/2)$);
     \coordinate (centerF) at ($(cen) + (#4/2, #5/2)$);
     \coordinate (start) at ($(cen) - (#4/2, #5/2)$);
    \ifthenelse{\equal{#6}{bloccato}}{%
        % Rettangolo acc sinistra

        \fill[black, rotate around={#7:(centerF)}] (start) rectangle ++(#4/2, #5);
        \draw[rotate around={#7:(centerF)}, line width = .6pt] (start) rectangle ++(#4, #5);
      }{%
        % Rettangolo acc destra
        \fill[black, rotate around={#7:(centerF)}] (acciaccDestra) rectangle ++(#4/2, #5);
        \draw[ rotate around={#7:(centerF)}, line width = .6pt] (start) rectangle ++(#4, #5);
    }
}




